<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="integrapp.tta.intel.ehu.eus.integrapp.UnirActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <ImageButton
            android:id="@+id/im1"
            android:src="@drawable/cuerda"
            android:layout_width="137dp"
            android:layout_height="116dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="0dp"
            android:layout_marginLeft="25dp"/>

        <Button android:text="Txisa"
            android:id="@+id/tx2"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginRight="25dp"/>

        <ImageButton
            android:id="@+id/im2"
            android:src="@drawable/pis"
            android:layout_width="137dp"
            android:layout_height="116dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <Button android:text="Gosaria"
            android:id="@+id/tx3"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"/>
        <ImageButton
            android:id="@+id/im3"
            android:src="@drawable/desayuno"
            android:layout_width="137dp"
            android:layout_height="116dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="25dp"/>
        <Button android:text="Soka"
            android:id="@+id/tx1"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"/>
    </GridLayout>

    <Button
        android:text="@string/button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="enviar"/>

</LinearLayout>