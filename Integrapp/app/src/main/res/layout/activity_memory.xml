<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vista.MemoryActivity"
    android:weightSum="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

                <ImageButton
                    android:id="@+id/pareja1"
                    android:layout_width="116dp"
                    android:layout_height="114dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:onClick="pareja1" />

                <ImageButton
                    android:id="@+id/pareja2"
                    android:layout_width="116dp"
                    android:layout_height="114dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:onClick="pareja2"
                    android:layout_marginRight="65dp" />
                <ImageButton
                    android:id="@+id/pareja3"
                    android:layout_width="116dp"
                    android:layout_height="114dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:onClick="pareja3"/>

                <ImageButton
                    android:id="@+id/pareja1a"
                    android:layout_width="116dp"
                    android:layout_height="114dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:onClick="pareja1"/>
                <ImageButton
                    android:id="@+id/pareja2a"
                    android:layout_width="116dp"
                    android:layout_height="114dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:onClick="pareja2"/>

                <ImageButton
                    android:id="@+id/pareja3a"
                    android:layout_width="116dp"
                    android:layout_height="114dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:onClick="pareja3"/>

        </GridLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_send"
            android:onClick="enviar"/>
</LinearLayout>