<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vista.AhorcadoActivity">

    <TextView
        android:text="@string/ahorcado"
        android:textStyle="bold"
        android:textSize="50px"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Inserta la letra en mayusculas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/letra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Introdue letra"/>
    <Button
        android:text="@string/enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="comprobarLetra"/>
    <EditText
        android:id="@+id/palabra_ahorcado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <ImageView
            android:id="@+id/imageAhorcado"
            android:background="@drawable/ahorcado0"
            android:layout_width="194dp"
            android:layout_height="194dp"/>
        <TextView
            android:id="@+id/sobra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </GridLayout>

</LinearLayout>

